@model List<DriveEasyApplication.Web.Mvc.Models.Candidate>
@{
    ViewData["Title"] = "Drive(s) Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>@ViewData["Title"]</h1>

<!-- DataTables -->
<link rel="stylesheet" href="../../plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
<link rel="stylesheet" href="../../plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
<link rel="stylesheet" href="../../plugins/datatables-buttons/css/buttons.bootstrap4.min.css">

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header clearfix">
                <a href="@Url.Action("SendInvites","Drives", new { driveId = ViewBag.DriveID })" class="btn btn-primary float-right" ><i class="fa fa-paper-plane"></i> Send Invite(s)</a>
            </div>
            <div class="card-body">
                <div style="max-height: 60%; overflow: auto">
                    <table id="drivesDetails" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Candidate Name</th>
                                <th>Email</th>
                                <th>Mobile Number</th>
                                <th>Experience (Years)</th>
                                <th>Skill Set</th>
                                <th>Resume Link</th>
                                <th>Notice Period</th>
                                <th>Source</th>
                                <th>Confirmed</th>
                                <th>Current Org</th>
                                <th>Meeting Link</th>
                                <th>Interview Time</th>
                                <th>Tech Panel</th>
                                <th>Tech feedback</th>
                                <th>Manager Panel</th>
                                <th>Manager Feedback</th>
                                <th>HR Panel</th>
                                <th>HR Feedback</th>
                                <th>Feedback Form</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Candidate candidate in Model)
                            {
                                <tr>
                                    <td>@candidate.Name</td>
                                    <td>@candidate.Email</td>
                                    <td>@candidate.MobileNumber</td>
                                    <td>@candidate.Experience</td>
                                    <td>@candidate.Skills</td>
                                    <td><a href="@candidate.ResumeLink" target="_blank">Resume</a></td>
                                    <td>@candidate.NoticePeriod</td>
                                    <td>@candidate.Source</td>
                                    <td>@candidate.Confirmed</td>
                                    <td>@candidate.CurrentOrganization</td>
                                    <td><a href="@candidate.MeetingLink" target="_blank">Join Meeting</a></td>
                                    <td>@candidate.FormattedInterviewTime</td>
                                    <td>@candidate.TechnicalPanel</td>
                                    <td>@candidate.TechnicalPanelFeedback</td>
                                    <td>@candidate.ManagerPanel</td>
                                    <td>@candidate.ManagerPanelFeedback</td>
                                    <td>@candidate.HRPanel</td>
                                    <td>@candidate.HRPanelFeedback</td>
                                    <td>@candidate.FeedbackForm</td>
                                    @*<td><span class="badge badge-warning">No Show</span></td>*@
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
    <!-- /.col -->
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            $("#drivesDetails").DataTable({
                "responsive": true, "lengthChange": false, "autoWidth": false,
                "buttons": ["copy", "csv", "excel", "pdf"]
            }).buttons().container().appendTo('#example2_wrapper .col-md-6:eq(0)');          
        })
    </script>
}